<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit
		name="com.enhancesys.jobcommon.beans">
		<description>Hibernate EntityManager Demo</description>
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<jta-data-source>DataSource</jta-data-source>

		<class>com.enhancesys.jobcommon.beans.Status</class>
		<class>com.enhancesys.jobcommon.beans.Module</class>
		<class>com.enhancesys.jobcommon.beans.ModuleAttribute</class>
		<class>com.enhancesys.jobcommon.beans.ModuleFailure</class>
		<class>com.enhancesys.jobcommon.beans.ModuleFileSummary</class>
		<class>com.enhancesys.jobcommon.beans.ModuleFileSummaryDetails</class>
		<class>com.enhancesys.jobcommon.beans.ModuleNotification</class>
		<class>com.enhancesys.jobcommon.beans.ModuleSummary</class>
		<class>com.enhancesys.jobcommon.beans.DailyDumpSummary</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="none" />
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property name="hibernate.default_schema" value="jobengine" />

			<!-- <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://192.168.2.144:5432/snoc2"/> -->
			<!-- <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/snoc2"/> -->
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://192.168.2.251:5432/snoc2" />
			<property name="javax.persistence.jdbc.user"
				value="postgres" />
			<property name="javax.persistence.jdbc.password"
				value="postgres" />
		</properties>
	</persistence-unit>
</persistence> 